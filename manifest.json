{
    "manifest_version": 2,

    "name": "SpongeAlert",
    "description": "Gives you an alert if something spongy happens",
    "version": "1.0",
    "background": {
      "scripts" : ["main.js"]
    },

    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "http://forums.spongepowered.org/notifications.json",
        "notifications"
    ]
}
